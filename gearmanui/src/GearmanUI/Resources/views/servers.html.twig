<div class="content">

    <table class="table table-striped table-bordered">
        <thead>
            <tr class="info">
                <th><a href="" ng-click="predicate = 'name'; reverse=!reverse">Name</a></th>
                <th>Address</th>
                <th><a href="" ng-click="predicate = 'version'; reverse=!reverse">Version</a></th>
                <th><a href="" ng-click="predicate = 'nb_workers'; reverse=!reverse">Registered workers</a></th>
                <th><a href="" ng-click="predicate = 'up'; reverse=!reverse">Server status</a></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="server in servers | orderBy:predicate:reverse" ng-class="server.rowClass">
                <td>{{ "{{ server.name }}" }}</td>
                <td>{{ "{{ server.addr }}" }}</td>
                <td>{{ "{{ server.version }}" }}</td>
                <td>{{ "{{ server.nb_workers }}" }}</td>
                <td>{{ "{{ server.up }}" }}</td>
            </tr>
        </tbody>
    </table>

</div>